<configuration>

    <!-- Define appenders -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define loggers for specific packages -->
    <logger name="Hooks" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <logger name="pages" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <logger name="stepDefinitions" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <logger name="stepDefinitions-API" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <logger name="utils" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Define the root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
